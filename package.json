{
  "name": "pd-react-skeleton",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@pagerduty/design-system": "^1.2.0",
    "@pagerduty/eslint-plugin-pagerduty": "3.1.0",
    "axios": "^0.18.0",
    "bootstrap": "^4.1.3",
    "env-cmd": "8.0.2",
    "jest-junit": "5.2.0",
    "pretender": "2.1.1",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "5.1.0",
    "react-scripts": "2.1.1",
    "react-test-renderer": "16.6.1",
    "reactstrap": "^6.5.0",
    "redux": "4.0.1",
    "redux-mock-store": "1.5.3",
    "redux-thunk": "2.3.0"
  },
  "scripts": {
    "start": "REACT_APP_ENV=development react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint . --ext .js . --ext .jsx",
    "lint-fix": "npm run lint -- --fix",

    "test:ci": "npm run test -- --ci --reporters=default --reporters=jest-junit",
    "lint:ci": "npm run lint -- --format junit -o test-results/eslint/eslint-results.xml",

    "deploy:staging":    "env-cmd config/deploy.staging.js     (npm run build && npm run copy-to-s3 && npm run activate-version)",
    "deploy:production": "env-cmd config/deploy.production.js  (npm run build && npm run copy-to-s3 && npm run activate-version)",

    "copy-to-s3": "aws s3 cp build/ $DEPLOY_TO --recursive --acl public-read --cache-control 'max-age=0, no-cache'",
    "activate-version": "echo $COMMIT_SHA >> sha.txt && aws s3 cp sha.txt $DEPLOY_VERSION_FILE_TO --acl public-read",

    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0"
  }
}
